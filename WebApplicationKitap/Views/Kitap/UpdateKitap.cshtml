
@model Kitap
<h2>Kitap Güncelle</h2>

<form asp-controller="Kitap" asp-action="UpdateKitap" method="post">
	<div class="form-group">
		<label asp-for="Title">Kitap Adı: </label>
		<input asp-for="Title" />
	</div>
	<div class="form-group">
		<label asp-for="ISBN">ISBN Numarası</label>
		<input asp-for="ISBN" />
	</div>
	<input asp-for="Id" hidden/>
	<button class="btn btn-primary" type="submit">Kitabı Güncelle</button>
</form>
